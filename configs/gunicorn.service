[Unit]
Description=Gunicorn instance to ODIN server
After=network.target

[Service]
User=manti
Group=manti
Restart=manti
WorkingDirectory=/home/manti/www/odin/src
ExecStart=/home/manti/.pyenv/versions/odin/bin/gunicorn --timeout 60 --log-level warning --access-logfile /var/log/odin/gunicorn-access.log --error-logfile /var/log/odin/gunicorn-error.log --pythonpath /home/manti/www/odin/src --bind 127.0.0.1:8000 --workers 4 odin.wsgi:application

[Install]
WantedBy=multi-user.target
