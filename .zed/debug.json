// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "adapter": "Debugpy",
    "label": "Run pytests",
    "request": "launch",
    "command": "uv",
    "module": "pytest",
    "command_arguments": [
      "run",
      "pytest",
      "--create-db",
      "--disable-warnings",
      "--ds=odin.settings.test"
    ],
    "args": ["$ZED_WORKTREE_ROOT"],
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Django Server",
    "adapter": "Debugpy",
    "request": "launch",
    "command": "uv",
    "module": "manage",
    "args": ["runserver", "--noreload"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "python": "$ZED_WORKTREE_ROOT/.venv/bin/python",
    "justMyCode": true,
    "show_console": true
  }
]
