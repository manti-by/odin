// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "adapter": "Debugpy",
    "label": "Run all tests",
    "request": "launch",
    "command": "uv",
    "module": "pytest",
    "command_arguments": ["run", "pytest"],
    "args": ["$ZED_WORKTREE_ROOT"],
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "adapter": "Debugpy",
    "label": "Run single test",
    "request": "launch",
    "command": "uv",
    "module": "pytest",
    "command_arguments": [
      "run",
      "pytest",
      "odin/tests/commands/test_fetch_traffic.py::TestFetchTrafficCommand::test_fetch_traffic_creates_record"
    ],
    "args": ["$ZED_WORKTREE_ROOT"],
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Django Server",
    "adapter": "Debugpy",
    "request": "launch",
    "command": "uv",
    "module": "manage",
    "args": ["runserver", "--noreload"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "python": "$ZED_WORKTREE_ROOT/.venv/bin/python",
    "justMyCode": true,
    "show_console": true
  }
]
