// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "adapter": "Debugpy",
    "label": "Run pytests",
    "request": "launch",
    "module": "pytest",
    "command": "uv",
    "command_arguments": [
      "run",
      "pytest",
      "--create-db",
      "--disable-warnings",
      "--ds=odin.settings.test",
      "odin/",
    ],
    "args": ["$ZED_WORKTREE_ROOT"],
    "cwd": "$ZED_WORKTREE_ROOT",
  },
  {
    "label": "Django Server",
    "adapter": "Debugpy",
    "request": "launch",
    "program": "manage.py",
    "args": ["runserver", "--noreload"],
    "cwd": "$ZED_WORKTREE_ROOT",
    "pathMappings": [
      {
        "localRoot": "${ZED_WORKTREE_ROOT}/",
        "remoteRoot": "/",
      },
    ],
    "justMyCode": true,
    "show_console": true,
  },
]
